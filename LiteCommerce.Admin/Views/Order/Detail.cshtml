@model LiteCommerce.DomainModels.Order
@{
    ViewBag.Title = "Order Detail";
}
<script src="~/Themes/AdminLTE/bower_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="~/Themes/AdminLTE/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- Select2 -->
<script src="~/Themes/AdminLTE/bower_components/select2/dist/js/select2.full.min.js"></script>
<!-- InputMask -->
<script src="~/Themes/AdminLTE/plugins/input-mask/jquery.inputmask.js"></script>
<script src="~/Themes/AdminLTE/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
<script src="~/Themes/AdminLTE/plugins/input-mask/jquery.inputmask.extensions.js"></script>
<!-- SlimScroll -->
<script src="~/Themes/AdminLTE/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="~/Themes/AdminLTE/bower_components/fastclick/lib/fastclick.js"></script>
<!-- AdminLTE App -->
<script src="~/Themes/AdminLTE/dist/js/adminlte.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="~/Themes/AdminLTE/dist/js/demo.js"></script>
<!-- date-range-picker -->
<script src="~/Themes/AdminLTE/bower_components/moment/min/moment.min.js"></script>
<script src="~/Themes/AdminLTE/bower_components/bootstrap-daterangepicker/daterangepicker.js"></script>
<!-- bootstrap datepicker -->
<script src="~/Themes/AdminLTE/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<div class="row">
    <div class="col-sm-8">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Order Information</h3>
                <div class="box-tools pull-right">
                    <a href="~/Order" class="btn btn-sm btn-default"><i class="fa fa-long-arrow-left"></i> Back</a>
                    <a href="~/Order/Input/@Model.OrderID" class="btn btn-sm btn-primary" data-toggle="tooltip" data-original-title="Edit Order Info"><i class="fa fa-pencil"></i></a>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td class="text-bold" width="150px">Order Date</td>
                                    <td>@Model.OrderDate</td>
                                </tr>
                                <tr>
                                    <td class="text-bold">Required Date</td>
                                    <td>@Model.RequiredDate</td>
                                </tr>
                                <tr>
                                    <td class="text-bold">Shipped Date</td>
                                    <td>@Model.ShippedDate</td>
                                </tr>
                                <tr>
                                    <td class="text-bold">Freight</td>
                                    <td>@Model.Freight</td>
                                </tr>
                                <tr>
                                    <td class="text-bold">Ship address</td>
                                    <td>@Model.ShipAddress</td>
                                </tr>
                                <tr>
                                    <td class="text-bold">Ship city</td>
                                    <td>@Model.ShipCity</td>
                                </tr>
                                <tr>
                                    <td class="text-bold">Ship country</td>
                                    <td>@Model.ShipCountry</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
    <div class="col-sm-4">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Order Details</h3>

                <div class="box-tools pull-right">
                    <a href="~/Order/OrderDetail/@Model.OrderID" class="btn btn-sm btn-primary" data-toggle="tooltip" data-original-title="Edit Order Detail"><i class="fa fa-pencil"></i></a>

                </div>
            </div>
            <div class="box-body">
                <table class="table table-hover table-bordered">
                    <input type="hidden" id="idOrderAjax" value="@Model.OrderID" />
                    <thead>
                        <tr>
                            <th>Unit price</th>
                            <th>Quantity</th>
                            <th>Discount</th>
                        </tr>
                    </thead>
                    <tbody id="orderDetails">
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>
<script>
        let id = document.getElementById("idOrderAjax").value;
        fetchOrderDetails(id);
        function fetchOrderDetails(id) {
            let method = 'GET';
            $.ajax({
                url: '@Url.Action("ajaxOrderHehe", "Order")',
                method: method,
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                data:{id:id},
                async : true,
                success: function (data) {
                    let att = ``;
                    $.each(data.Data, function (key, value) {
                        att += `
                            <tr>
                                <td>${value["UnitPrice"]}</td>
                                <td>${value["Quantity"]}</td>
                                <td>${value["Discount"]}</td>
                            </tr>`;
                    });

                    document.getElementById("orderDetails").innerHTML = att;
                },
                error:function(data){
                    alert('Lỗi');
                }
            });
        }
</script>

