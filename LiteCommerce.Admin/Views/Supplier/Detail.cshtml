@model LiteCommerce.DomainModels.Supplier
@{
    ViewBag.Title = "Detail Supplier";
}
<div class="row">
    <div class="col-sm-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Product Information</h3>
                <div class="box-tools pull-right">
                    <a href="~/Supplier" class="btn btn-sm btn-default"><i class="fa fa-long-arrow-left"></i> Back</a>
                    <a href="~/Supplier/Input/@Model.SupplierID" class="btn btn-sm btn-primary" data-toggle="tooltip" data-original-title="Edit Product Info"><i class="fa fa-pencil"></i></a>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-4">
                        <img src="~/Images/Supplier.jpg" width="100%" />
                    </div>
                    <div class="col-sm-8">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td class="text-bold" width="150px">Company name</td>
                                    <td>@Model.CompanyName</td>
                                </tr>
                                <tr>
                                    <td class="text-bold">Contact name</td>
                                    <td>@Model.ContactName</td>
                                </tr>
                                <tr>
                                    <td class="text-bold">Contact title</td>
                                    <td>@Model.ContactTitle</td>
                                </tr>
                                <tr>
                                    <td class="text-bold">Address</td>
                                    <td>@Model.Address</td>
                                </tr>
                                <tr>
                                    <td class="text-bold">City</td>
                                    <td>@Model.City</td>
                                </tr>
                                <tr>
                                    <td class="text-bold">Country</td>
                                    <td>@Model.Country</td>
                                </tr>
                                <tr>
                                    <td class="text-bold">Phone</td>
                                    @if (Model.Phone.IsEmpty())
                                    {
                                        <td>Không có</td>
                                    }
                                    else
                                    {
                                        <td>@Model.Phone</td>
                                    }
                                </tr>
                                <tr>
                                    <td class="text-bold">Fax</td>
                                    @if (Model.Fax.IsEmpty())
                                    {
                                        <td>Không có</td>
                                    }
                                    else
                                    {
                                        <td>@Model.Fax</td>
                                    }
                                </tr>
                                <tr>
                                    <td class="text-bold">Homepage</td>
                                    @if (Model.HomePage.IsEmpty())
                                    {
                                        <td>Không có</td>
                                    }
                                    else
                                    {
                                        <td>@Model.HomePage</td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
    
</div>

