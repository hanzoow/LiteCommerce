@model LiteCommerce.DomainModels.Category
@{
    ViewBag.Title = "Detail Category";
}
<div class="row">
    <div class="col-sm-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Shipper Information</h3>
                <div class="box-tools pull-right">
                    <a href="~/Category" class="btn btn-sm btn-default"><i class="fa fa-long-arrow-left"></i> Back</a>
                    <a href="~/Category/Input/@Model." class="btn btn-sm btn-primary" data-toggle="tooltip" data-original-title="Edit Product Info"><i class="fa fa-pencil"></i></a>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-4">
                        <img src="~/Images/Category.jpg" width="100%" />
                    </div>
                    <div class="col-sm-8">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td class="text-bold" width="150px">CategoryName</td>
                                    <td>@Model.CategoryName</td>
                                </tr>
                                <tr>
                                    <td class="text-bold">Description</td>
                                    <td>@Model.Description</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>

</div>

