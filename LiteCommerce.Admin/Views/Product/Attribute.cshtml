@model LiteCommerce.Admin.Models.AttributeResult
@{
    ViewBag.Title = "Edit Attribute";
}

<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Product Attributes</h3>

        <div class="box-tools pull-right">
            <a href="~/Product/Detail/@Model.ProductID" class="btn btn-sm btn-primary">Back</a>
        </div>
    </div>
    <div class="box-body">
        <form action="~/Product/Attribute" method="post">
            <input type="hidden" name="ProductID" value="@Model.ProductID" />
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Property</th>
                            <th>Value</th>
                            <th>DisplayOrder</th>
                            <th><button type="button" class="btn btn-sm btn-success" id="addRecord"><i class="fa fa-plus-circle"></i></button></th>
                        </tr>
                    </thead>
                    <tbody id="inputAttribute">
                        @foreach (var item in Model.Data)
                        {
                            <tr class="increment">
                                <td>
                                    <input type="text" name="AttributeName[]" class="form-control" value="@item.AttributeName" />
                                </td>
                                <td>
                                    <input type="text" name="AttributeValues[]" class="form-control" value="@item.AttributeValues" />
                                </td>
                                <td>
                                    <input type="number" name="DisplayOrder[]" class="form-control" min="1" value="@item.DisplayOrder"/>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-danger" id="removeRecord"><i class="fa fa-times-circle"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table> 
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lưu</button>
        </form>
    </div>
    <!-- /.box-body -->
</div>